<%= form_for [:admin, @state] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :background %><br />
    <%= f.text_field :background %>
  </p>

  <p>
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </p>
  <%= f.submit %>
<% end %>
