<strong><%= t('comments.new_comment_title') %></strong>
<%= form_for [@ticket, @comment] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <% if can?(:"change states", @project) || current_user.admin? %>
  <p>
    <%= f.label :state_id  %>
    <%= f.select :state_id, @states.map { |s| [s.name, s.id] },
                            :selected => @ticket.state_id %>
  </p>
  <% end %>
  <%= render "tags/form" %>
  <%= f.submit %>
<% end %>
